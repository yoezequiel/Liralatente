---
import poesias from "../data/poesias.json";
import Layout from "../Layouts/Layout.astro";
import AudioCard from "../components/AudioCard.astro";

const poesiasConAudio = poesias.filter((poesia) => poesia.audio);
const poesiasReverse = poesiasConAudio.slice().reverse();
---

<Layout title="Musica">
    {poesiasReverse.map((poesia) => <AudioCard poesia={poesia} />)}
</Layout>
